<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    tools:context=".GameActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="#FF0000"
        android:orientation="vertical" >

        <Button
            android:id="@+id/cookieButton"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/text_cookie_button"
            android:onClick="addCookies" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF0000" 
            android:orientation="vertical">
            
            
            <TextView
    			android:id="@+id/textNumberCookies"
   			 	android:layout_width="fill_parent"
    			android:layout_height="fill_parent"
    			android:text="@string/text_cookies" >
			</TextView>
			
            <TextView
    			android:id="@+id/numberCookies"
   			 	android:layout_width="fill_parent"
    			android:layout_height="fill_parent">
			</TextView>

            
            <TextView 
    			android:id="@+id/textCps"
   			 	android:layout_width="fill_parent"
    			android:layout_height="fill_parent"
    			android:text="@string/text_cps" >
			</TextView>

            <TextView 
    			android:id="@+id/textCpc"
   			 	android:layout_width="fill_parent"
    			android:layout_height="fill_parent"
    			android:text="@string/text_cpc" >
			</TextView>
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#00FF00"
        android:drawSelectorOnTop="false" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="#0000FF"
        android:drawSelectorOnTop="false" />

</LinearLayout>